<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_yellow"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button

            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="正常播放"
            android:id="@+id/original_filter"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/beauty_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="美颜"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />



        <Button
            android:id="@+id/cool_filter"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="冷色调"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/early_bird_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="努力色"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/evergreen_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="原谅色"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/n1977_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="冷冬色"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/nostalgia_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="怀旧色"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/romance_filter"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:background="@color/color_yellow_deep"
            android:padding="10dp"
            android:text="浪漫色"
            android:textColor="#CEC9E7"
            android:textSize="12sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/per_qx"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:padding="10dp"
            android:text="取消"
            android:textColor="#0b0b0b"
            android:textSize="12sp"
            android:textStyle="bold" />



    </LinearLayout>

</RelativeLayout>